@model IEnumerable<WebAppKaryawan.Models.Company>

<!DOCTYPE html>
<html lang="en">

<body class="fix-header fix-sidebar card-no-border">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-themecolor">Company</h3>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item active">Company</li>
            </ol>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <div class="row">
        <!-- column -->
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title" align="center">List of Company</h4>
                    <div class="create" style="margin-top:25px; margin-left:775px">
                        <a class="waves-effect waves-dark" asp-action="Create" aria-expanded="false"><i class="fa fa-plus"></i><span class="hide-menu"> Add New Company</span></a>
                    </div>
                    <div class="search" style="margin-left:25px">
                        <form asp-controller="Company" asp-action="Index">
                            <p>
                                Company Name <input type="text" name="searchString">
                                <input type="submit" value="Filter" class="btn btn-primary" />
                            </p>
                        </form>
                    </div>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr align="center">
                                    <th style="text-align:center">
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th style="text-align:center">
                                        @Html.DisplayNameFor(model => model.Address)
                                    </th>
                                    <th style="text-align:center">
                                        Options
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Address)
                                        </td>
                                        <td align="center">
                                            <a asp-action="Edit" asp-route-id="@item.CompanyID">Edit</a> |
                                            <a asp-action="Details" asp-route-id="@item.CompanyID">Details</a> |
                                            <a asp-action="Delete" asp-route-id="@item.CompanyID">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End PAge Content -->
        <!-- ============================================================== -->
    </div>
</body>
</html>
